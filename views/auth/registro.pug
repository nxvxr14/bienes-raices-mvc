extends ../layout/index

block contenido 
  div.py-10
    h1.text-4xl.my-10.font-extrabold.text-center Bienes 
      span.font-normal Raices 
    h1.text-center.text-2xl.font-extrabold=pagina 

    if errores 
      div.max-w-md.mx-auto.my-10
        each error in errores   
          p(id=`error-${error.id}` class='bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold')= error.msg

    script.
      setTimeout(() => {
        document.querySelectorAll('[id^="error-"]').forEach(element => {
          element.remove();
        });
      }, 5000); // Eliminar todos los elementos con id que comiencen por 'error-' después de 5 segundos



    div.mt-8.mx-auto.max-w-md 
      div.bg-white.py-8.px-8.shadow  
        form.space-y-5(method="POST" action="/auth/registro")
          div 
            label.block.tex-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Nombre
            input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nombre" type="text" name="nombre" value=usuario ? usuario.nombre : '')
          div 
            label.block.tex-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Correo Electronico 
            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Correo Electronico" type="email" name="email" value=usuario ? usuario.email: '')
          div 
            label.block.tex-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Contraseña 
            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Contraseña" type="password" name="password")
          div 
            label.block.tex-sm.uppercase.text-gray-500.mb-2.font-bold(for="repetir_contraseña") Repetir Contraseña 
            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repetir Contraseña" type="password" name="repetir_contraseña")
          
          div.flex.items-center.justify-between
            a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Iniciar Sesión. 
            a.text-gray-500.text-xs(href="/auth/recuperar") Olvide mi contraseña.  
          
          input(class="w-full bg-indigo-600 hover:bg-indigo-900 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")



   
